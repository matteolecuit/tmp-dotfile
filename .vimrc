set number relativenumber
set linebreak
set showbreak=+++
set showmatch

autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions -=o
set splitbelow splitright

set smartcase
set ignorecase
set incsearch
 
set autoindent
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=2
 
syntax on
filetype plugin indent on

set ruler

set undolevels=1000

